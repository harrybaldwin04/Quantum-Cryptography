   "source": [
    "## 7. Main Simulation"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def run_simulation():\n",
    "    \"\"\"Run the complete BB84 simulation with user input.\"\"\"\n",
    "    \n",
    "    # Get simulation parameters\n",
    "    while True:\n",
    "        try:\n",
    "            length = int(input(\"Enter the number of bits to send: \"))\n",
    "            if length <= 0:\n",
    "                raise ValueError\n",
    "            break\n",
    "        except ValueError:\n",
    "            print(\"Please enter a valid positive integer.\")\n",
    "\n",
    "    eve_input = input(\"Include Eve in the simulation? (yes/no): \").strip().lower()\n",
    "    include_eve = eve_input in [\"yes\", \"y\"]\n",
    "\n",
    "    message = input(\"Enter the message Alice wants to send: \")\n",
    "    binary_message = string_to_binary(message)\n",
    "\n",
    "    if not include_eve:\n",
    "        # Simulation without Eve\n",
    "        alice_bits, alice_bases, bob_bases = random_without_eve(length)\n",
    "        bob_bits = simulation_without_eve(alice_bases, alice_bits, bob_bases)\n",
    "        key_info = create_key(alice_bases, alice_bits, bob_bases, bob_bits)\n",
    "        key = key_info[0]\n",
    "        print(\"\\n--- Simulation without Eve ---\")\n",
    "        print_stats(alice_bases, bob_bases, alice_bits, bob_bits)\n",
    "        print(\"Key length:\", len(key))\n",
    "    else:\n",
    "        # Simulation with Eve\n",
    "        alice_bits, alice_bases, bob_bases, eve_base_inc, eve_base_tran = random_with_eve(length)\n",
    "        bob_bits, eve_bits = simulation_with_eve(alice_bases, alice_bits, bob_bases, eve_base_inc, eve_base_tran)\n",
    "        print(\"\\n--- Simulation with Eve ---\")\n",
    "        print_stats(alice_bases, bob_bases, alice_bits, bob_bits)\n",
    "        key_info = create_key(alice_bases, alice_bits, bob_bases, bob_bits)\n",
    "        key = key_info[0]\n",
    "        print(\"Key length:\", len(key))\n",
    "\n",
    "        # Ask to run Monte Carlo analysis\n",
    "        run_mc = input(\"\\nRun Monte Carlo QBER analysis with Eve? (yes/no): \").strip().lower()\n",
    "        if run_mc in [\"yes\", \"y\"]:\n",
    "            num_trials = int(input(\"Enter number of Monte Carlo trials (e.g. 500): \"))\n",
    "            key_len = length\n",
    "            monte_carlo_qber_with_eve(num_trials=num_trials, key_length=key_len)\n",
    "\n",
    "    # Encrypt and decrypt message\n",
    "    key_for_message = key[:len(binary_message)]\n",
    "    encrypted_message = encryption(binary_message, key_for_message)\n",
    "    decrypted_message = decryption(encrypted_message, key_for_message)\n",
    "    decrypted_string = binary_to_string(decrypted_message)\n",
    "\n",
    "    print(\"\\n--- Message Transmission ---\")\n",
    "    print(\"Original message:\", message)\n",
    "    print(\"Decrypted message:\", decrypted_string)\n",
    "    print(\"Encryption successful:\", message == decrypted_string)\n",
    "\n",
    "# Run the simulation\n",
    "if __name__ == \"__main__\":\n",
    "    run_simulation()"
   ]
  }
